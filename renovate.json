{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":separateMajorReleases",
    ":combinePatchMinorReleases",
    ":enableVulnerabilityAlertsWithLabel(security)",
    "group:dotnetMonorepo",
    "group:nugetMonorepo"
  ],
  "prHourlyLimit": 10,
  "prConcurrentLimit": 10,

  "minimumReleaseAge": "3 days",

  "recreateWhen": "never",
  "labels": ["Dependency Management"],

  "packageRules": [
    {
      "description": "Group Xamarin & AndroidX NuGets",
      "matchManagers": ["nuget"],
      "matchPackagePatterns": [
        "^Xamarin\\.",
        "^Xamarin\\.AndroidX\\.",
        "^Xamarin\\.Android\\.Support\\."
      ],
      "groupName": "Xamarin & AndroidX"
    },
    {
      "description": "Group Windows App SDK + Windows SDK Build Tools",
      "matchManagers": ["nuget"],
      "matchPackageNames": [
        "Microsoft.WindowsAppSDK",
        "Microsoft.Windows.SDK.BuildTools"
      ],
      "groupName": "Windows SDK & App SDK"
    }
  ]
}
